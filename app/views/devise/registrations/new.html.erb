<div class="sign-up__page">
  <h2>Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="sign-up__fieldset">
      <%= f.label :name %><br />
      <%= f.text_field :name, class: 'sign-up__input' %>
    </div>

    <div class="sign-up__fieldset">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, class: 'sign-up__input' %>
    </div>

    <div class="sign-up__fieldset">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "off", class: 'sign-up__input' %>
    </div>

    <div class="sign-up__fieldset">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off", class: 'sign-up__input' %>
    </div>

    <div class="actions">
      <%= f.submit "Sign up", class: 'btn btn-success' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>